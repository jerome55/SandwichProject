@model SnackProject.Models.OrderViewModels.OrderViewModel

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>


<form asp-action="Index" method="get">
    <p>
        Filtrer :
        <select name="companyFilter">
            @foreach (var item in Model.Companies)
            {
                @if (ViewData["CompanyFilter"] != null && (int)ViewData["CompanyFilter"] == item.Id)
                {
                    <option value="@Html.DisplayFor(modelItem => item.Id)" selected> @Html.DisplayFor(modelItem => item.Name)</option>
                }
                else
                {
                    <option value="@Html.DisplayFor(modelItem => item.Id)"> @Html.DisplayFor(modelItem => item.Name)</option>
                }
            }
        </select>
        <select name="sandwichFilter">
            @foreach (var item in Model.Sandwiches)
            {
                @if (ViewData["SandwichFilter"] != null && (int)ViewData["SandwichFilter"] == item.Id)
                {
                    <option value="@Html.DisplayFor(modelItem => item.Id)" selected> @Html.DisplayFor(modelItem => item.Name)</option>
                }
                else
                {
                    <option value="@Html.DisplayFor(modelItem => item.Id)"> @Html.DisplayFor(modelItem => item.Name)</option>
                }
            }
        </select>
        <input type="submit" value="Filtrer" class="btn btn-default"/>
    </p>
    @if (ViewData["CompanyFilter"] != null)
    {
        <p>
            @Html.DisplayNameFor(model => model.Total) @Html.DisplayFor(model => model.Total)
        </p>
    }
    

</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.OrderLines.First().Sandwich.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderLines.First().Quantity)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.OrderLines) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Sandwich.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
        </tr>
        <tr>
            <td>
                <table class="table">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(modelItem => item.OrderLineVegetables.First().Vegetable.Name)
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var cruds in item.OrderLineVegetables)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => cruds.Vegetable.Name)
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </td>
        </tr>
}
    </tbody>
</table>
